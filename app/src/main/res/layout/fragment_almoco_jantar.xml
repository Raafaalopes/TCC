<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AlmocoJantarFragment">

    <TextView
        android:id="@+id/ticketsDisponiveisAlmocoJantar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você tem: 0 tickets de almoço/jantar disponíveis"
        android:textSize="18sp"
        android:paddingBottom="16dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnGerarCodigoAlmocoJantar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GERAR CÓDIGO DE TICKET"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        app:cornerRadius = "20dp"/>
</LinearLayout>
